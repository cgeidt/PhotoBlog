<h2>
  <%= @photo.title %>
</h2>
<p>
  <%= @photo.description %>
</p>
<p>
  <%= @photo.image %>
</p>
<p>
  <% if @photo.private %>
    <p style="color:#2efd00"><%= t('private') %></p>
  <% else %>
    <p style="color:#fd7a00"><%= t('public') %></p>
  <% end %>
</p>
<br/>

<%= link_to t('btn_back'), album_path(@photo.album), class: 'btn btn-small btn-info' %>
<%= link_to t('to_home'), welcome_index_path, class: 'btn btn-small btn-info' %>
<%= link_to t('edit'), edit_album_photo_path(@album, @photo), class: 'btn btn-small btn-warning' %>
<br/>
<br/>

<%= image_tag @photo.image.url %>
<br/>

<br/>
<h3><%= t('comments') %></h3>
<ul class="list-group">
  <%= render @photo.comments %>
</ul>
<br/>

<h3><%= t('new_comment') %></h3>
<%= render 'comments/form' %>
